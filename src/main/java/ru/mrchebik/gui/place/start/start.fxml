<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.mrchebik.gui.place.start.StartPresenter">
    <center>
        <ImageView fx:id="coconutPng" fitHeight="275.0" fitWidth="275.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="-35.0" />
            </BorderPane.margin>
            <Image url="/img/coconut.png" />
        </ImageView>
    </center>
    <bottom>
        <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0">
            <Button fx:id="createProject" mnemonicParsing="false" onMouseClicked="#handleNewProject" onKeyReleased="#handleNewProjectWithKey" text="New Project" />
        </HBox>
    </bottom>
    <top>
        <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <Button mnemonicParsing="false" onMouseClicked="#handleSetupJDK" text="JDK">
                <HBox.margin>
                    <Insets right="6.0" />
                </HBox.margin>
            <tooltip>
               <Tooltip text="Syntax setting:&#10;Correct JDK path in System: JavaCompiler&#10;Otherwise: JavaSymbolSolver" />
            </tooltip>
            </Button>
        </HBox>
    </top>
</BorderPane>
